<h1>User Info</h1>
<div class="profile-container">
   <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
  <h4 class="profile-name">name<%= @user.name %></h4>
  <h4 class="profile-introduction">introduction<%= @user.introduction %></h4>
</div>
<% if @user.id == current_user.id %>
 <p><%= link_to 'プロフィール編集', edit_user_path(@user) %></p>
 <% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><p><%= book.title %></p></td>
      <td><p><%= book.body %></p></td>
    </tr>
  <% end %>
</table>
<%= paginate @books %>